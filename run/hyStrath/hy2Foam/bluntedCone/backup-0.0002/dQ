FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0.0002";
    object      dQ;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 2 -3 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    cone
    {
        type            calculated;
        value           uniform 0;
    }
    inlet
    {
        type            calculated;
        value           uniform 0;
    }
    rWedge
    {
        type            wedge;
    }
    lWedge
    {
        type            wedge;
    }
    outlet
    {
        type            calculated;
        value           uniform 0;
    }
}


