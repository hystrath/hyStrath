FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "include/initialConditions"

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform $velocityField;

boundaryField
{
    inlet
    {
        /*type            fixedValue;
        value           uniform $velocityInlet;*/
        type            rampInlet;
        refValue        uniform (1 0 0);
        offset          (0 0 0);
        amplitude       $xVelocityInlet;
        tRamp           1e-4;
    }
    
    fire
    {
        type            nonEqMaxwellSlipU;
        accommodationCoeff 1;
        Uwall           $velocityWall;
        thermalCreep    true;
        curvature       true;
        value           uniform $velocityWall;
    }
    
    #include "include/boundaries"
}

