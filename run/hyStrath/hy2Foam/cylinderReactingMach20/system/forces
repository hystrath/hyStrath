FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      forces;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "../0/include/initialConditions"

forces
{
    type forces;
    functionObjectLibs ("libstrathForces.so");
    outputControl timeStep;
    outputInterval 50;
    patches (cylinder); // edit accordingly
    rhoName rho;
    rhoInf 1.363e-05; // edit accordingly
    log false;
    CofR (0 0 0);
    pitchAxis (0 0 1);
}

forceCoeffs
{
    type forceCoeffs;
    functionObjectLibs ("libstrathForces.so");
    outputControl timeStep;
    outputInterval 10;
    patches (cylinder); // edit accordingly
    rhoName rho;
    rhoInf 1.363e-05; // edit accordingly
    magUInf $UxInlet;
    log true;
    CofR (0 0 0);
    dragDir (1 0 0);
    liftDir (0 1 0);
    pitchAxis (0 0 1);
    lRef 2.0; // edit accordingly: see constant/transportProperties/rarefiedParameters/characteristicLength
    Aref 0.2; // edit accordingly: Aref = lRef*spanwiseThickness
}

